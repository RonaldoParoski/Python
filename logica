palavra = input('Digite uma palavra: ')
inversa = palavra[::-1] #inverte a palavra de tras para frente
if palavra == inversa:
    print('Palindrone')
else:
    print('Nao √© palindrone')

# outra maneira de fazer 
inversa1 = ''
for letra in palavra:
    inversa1 = letra + inversa1
    print(inversa1)

if palavra ==  inversa1:
    print('OK')
else:
    print('nao bommm')

